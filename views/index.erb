<html>
  <head>
    <link href="<%= url('/assets/styles.css') %>" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Vollkorn" rel="stylesheet">
  </head>
  <body>
    <div id="main-container">
      <h1 id="heading">Web Guesser</h1>
      <h2 id="subheading">Guess the secret number in as few tries as possible!</h2>
      <h3 id="subheading">Remaining Tries: <%= @@remaining_tries %></h3>

      <% if message %>
        <p class="<%= closeness %> message"><%= message %></p>

        <% if message.include?('right') %>
          <p id="revealed-number">The secret number is <%= number %></p>
        <% end %>
      <% end %>

      <form>
        <input id="number-field" type='text' name='guess' />
        <input class="submit-button" type='submit' value='Guess!' />
      </form>
    </div>

  </body>
</html>
